@model Website.Models.HomeViewModel
@{
    ViewData["Title"] = "خدمات پرستاری در منزل [شبانه روزی] ✅ موسسه همراه طب";
}

<div class="home-banner">
    <div class="ellipse"></div>
    <div class="sign"></div>
    <div class="row justify-content-between home-banner-content">
        <div class="right-col col-md-6 col-sm-12">
            <h1 class="heading1">
                مرکز <span class="heading1-highlight">خدمات پرستاری</span> در منزل با پرستاران بیمارستان
            </h1>
            <div class="short-desc"><strong>موسسه خدمات پرستاری در منزل همراه طب </strong> ارائه دهنده بهترین و با
                کیفیت ترین <strong>خدمات درمانی، پزشکی و پرستاری در منزل </strong> با اعزام بهترین متخصص و دکتر
                های پایتخت به محل مورد نظر شما عزیزان.</div>
            <div class="long-desc">موسسه پرستاری همراه طب با تهیه و تدارک کلیه تجهیزات پزشکی ، وسایل بیمارستانی و مصرفی مورد
                نیاز بیمار در
                منزل یا بیمارستان و نیز با بهرمندی از آمبولانس‌های کددار و معمولی به همراه ارائه تمام خدمات پرستاری ،
                فیزیوتراپی ، پزشکی ، مراقبتی و… در منزل افتخار خدمت به خانواده ها در تمام نقاط: بیمارستان ، مراکز خصوصی
                ، دولتی و شخصی در تهران را دارد.</div>
            <div class="d-flex">
                <a asp-area="" asp-controller="Service" asp-action="Index" class="btn btn-request-service">
                    <span class="request-service-icon"></span><span class="request-service-text">ثبت درخواست
                        خدمات</span></a>
                <button class="btn btn-free-council"><span class="free-council-icon"></span><span
                        class="free-council-text">مشاوره
                        رایگان</span></button>
            </div>
        </div>
        <div class="col-md-5 col-sm-12 banner-image">
            <img src="/image/banner.webp" />
        </div>
    </div>
</div>
<div class="home-services">
    <div class="home-services-title">
        <div class="col-12 col-md-7">
            <h2>خدمات پزشکی و پرستاری</h2>
            <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ، و با استفاده از طراحان گرافیک است، چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است.</p>
        </div>
        <div class="col-12 col-md-5">
            <a asp-area="" asp-controller="Blog" asp-action="Index" class="btn btn-all-services"><span class="all-services-text">مشاهده همه خدمات</span><span class="my-icon arrow-left"></span></a>
        </div>
    </div>
    <div class="row justify-content-between service-items-row">
        @for (int i = 0; (i < 3 && i < Model.LastSixDuties.Count); i++)
        {
            <div class="service-item col-12 col-md-4">
                <div class="service-label">نیروی تخصصی</div>
                <img src="/image/hospital.png" />
                <h2>@Model.LastSixDuties[i].Title</h2>
                <p>@Html.Raw(Model.LastSixDuties[i].BodyOverview)</p>
                <button class="btn btn-service-info"><span class="service-info-text">بررسی و ثبت درخواست</span><span class="arrow-left-icon"></span></button>
            </div>
        }
    </div>
    @if (Model.LastSixDuties.Count > 3)
    {
        <div class="row justify-content-between service-items-row">
            @for (int i = 3; (i < 6 && i < Model.LastSixDuties.Count); i++)
            {
                <div class="service-item col-12 col-md-4">
                    <div class="service-label">نیروی تخصصی</div>
                    <img src="/image/hospital.png" />
                    <h2>@Model.LastSixDuties[i].Title</h2>
                    <p>@Html.Raw(Model.LastSixDuties[i].BodyOverview)</p>
                    <button class="btn btn-service-info"><span class="service-info-text">بررسی و ثبت درخواست</span><span class="arrow-left-icon"></span></button>
                </div>
            }
        </div>
    }
</div>

