@model Website.Models.ServiceViweModel
@{
    ViewData["Title"] = Model.Service.MetaTitle;
    ViewData["MetaDescription"] = Model.Service.MetaDescription;
    ViewData["CanonicalUrl"] = Model.CanonicalUrl;

}

<div class="service-details-header">
    <div class="header-container">
        <div class="breadcrumbs">
            <a href="/">صفحه اصلی</a>/
            <span>خدمات</span>/
            <span>@Model.Service.Title</span>
        </div>
        <div class="title">@Model.Service.Title</div>
        <p>@Html.Raw(@Model.Service.BodyOverview)</p>
        <form class="search-box" action="/request">
            <div class="row">
                <div class="col-12 col-md-3 mt-4">
                    <select class="form-select" aria-label="انتخاب نوع خدمت">
                        <option selected>انتخاب نوع خدمت</option>
                        <option value="1">سرم تراپی</option>
                        <option value="2">تزریقات</option>
                        <option value="3">وصل سوند</option>
                    </select>
                    <span class="fa fa-envelop"></span>
                </div>
                <div class="col-12 col-md-3 mt-4">
                    <input type="text" class="form-control" placeholder="نام و نام خانوادگی ">
                </div>
                <div class="col-12 col-md-3 mt-4">
                    <input type="tel" class="form-control" placeholder="شماره تماس">
                </div>
                <div class="col-12 col-md-3 mt-4 text-center">
                    <button type="submit" class="btn btn-primary">ثبت درخواست</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="service-details-content">
    @Html.Raw(Model.Service.Body)
</div>

<div class="home-numerical-report">
    <div class="numerical-report-title">
        <div class="col-12 col-md-6">
            <h2>تجربه‌ی متخصصین ما در یک نگاه</h2>
        </div>
